<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/colorWhite">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/transaction_group_icon"
        android:src="@drawable/ic_wallet_24dp"
        android:layout_centerVertical="true"
        android:tint="@color/colorPrimary"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:paddingStart="16dp"
        android:id="@+id/row_trans_item_info_box"
        android:layout_toEndOf="@id/transaction_group_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            style="@style/SmallValueBold"
            android:id="@+id/row_trans_item_group_name"
            android:text="Cà phê"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/SmallLabel"
            android:id="@+id/row_trans_item_note"
            android:layout_below="@id/row_trans_item_group_name"
            android:text="blabla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/SmallLabel"
            android:id="@+id/row_trans_item_type"
            android:layout_below="@id/row_trans_item_note"
            android:text="blabla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:layout_centerVertical="true"
        style="@style/SmallLabel"
        android:id="@+id/row_trans_item_amount"
        android:layout_toEndOf="@id/row_trans_item_info_box"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:text="50,000.00"
        android:textColor="@color/colorPrimary"
        android:gravity="end"
        android:layout_height="wrap_content"/>
</RelativeLayout>